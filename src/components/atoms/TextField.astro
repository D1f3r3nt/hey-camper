---
interface Props {
    name: string;
    id: string;
    placeholder?: string;
    required?: boolean;
}

const { id, name, placeholder, required = false } = Astro.props;
---

<input
    type="text"
    name={name}
    id={id}
    placeholder={placeholder}
    class="border-[1px] border-black w-full p-3 outline-none"
    required={required}
/>
