---
import IconX from "../../assets/icons/icon-x.svg";
import IconInstagram from "../../assets/icons/icon-instagram.svg";
import IconTikTok from "../../assets/icons/icon-tiktok.svg";

interface Props {
    className?: string;
}

const { className } = Astro.props;

const instagram = "";
const tiktok = "";
const x = "";
---

<div class={`flex flex-row gap-x-4 ${className}`}>
    <a href={x}>
        <IconX class="w-[18px] h-[18px] cursor-pointer hover:scale-105" />
    </a>

    <a href={instagram}>
        <IconInstagram
            class="w-[18px] h-[18px] cursor-pointer hover:scale-105"
        />
    </a>

    <a href={tiktok}>
        <IconTikTok class="w-[18px] h-[18px] cursor-pointer hover:scale-105" />
    </a>
</div>
